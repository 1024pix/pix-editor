{
  "name": "Pix Review App",
  "env": {
    "REVIEW_APP": {
      "description": "Indicates that the application is a review app",
      "value": "true"
    },
    "PIX_EDITOR_BASE_URL": {
      "generator": "url"
    }
  },
  "scripts": {
    "first-deploy": "npm run scalingo-post-ra-creation"
  },
  "addons": [
    {
      "plan": "postgresql:postgresql-sandbox",
      "options": {
        "version": "15.7"
      }
    },
    {
      "plan": "redis:redis-sandbox",
      "options": {
        "version": "7.2.4"
      }
    }
  ],
  "formation": {
    "web": {
      "amount": 1,
      "size": "S"
    }
  }
}
