<div class="skill-header {{this.skill.descriptionCSS}}">
  <div class="ui menu">
    <div class="ui left menu">
      {{#if this.mayMove}}
        <a class="ui icon item" onclick={{action "moveSkill"}}><i class="icon random"></i></a>
      {{/if}}
    </div>
    <div class="item header">{{this.skill.name}}</div>
    <div class="ui right menu">
      {{#if this.maximized}}
        <a class="ui icon item" onclick={{action "minimize"}}><i class="window minimize icon"></i></a>
      {{else}}
        <a class="ui icon item" onclick={{action "maximize"}}><i class="window maximize outline icon"></i></a>
      {{/if}}
      <a class="ui icon item" onclick={{action "close"}}><i class="icon window close"></i></a>
    </div>
  </div>
</div>
<div class="skill-details">
  <div class="skill-data">
    <SkillForm @skill={{this.skill}} @application={{this.application}} @edition={{this.edition}} />
  </div>
  <div class="ui vertical compact labeled icon menu skill-menu">
    {{#if this.edition}}
      <a class="item important-action" onclick={{action "save"}}>
        <i class="save icon"></i>
        Enregistrer
      </a>
      <a class="item" onclick={{action "cancelEdit"}}>
        <i class="ban icon"></i>
        Annuler
      </a>
    {{else}}
      {{#if this.skill.productionTemplate}}
        <a class="item" onclick={{action "preview"}}>
          <i class="eye icon"></i>
          Pr√©visualiser
        </a>
      {{/if}}
      {{#if this.mayEdit}}
        <a class="item" onclick={{action "edit"}}>
          <i class="edit icon"></i>
          Modifier
        </a>
      {{/if}}
      {{#if this.mayAccessAirtable}}
        <a class="item" onclick={{action "openAirtable"}}>
          <i class="table icon"></i>
          Airtable
        </a>
      {{/if}}
    {{/if}}
  </div>
</div>
<PopinSelectLocation @display={{this.displaySelectLocation}} @onChange={{action "setLocation"}} @name={{this.skillName}} @areas={{this.areas}} @competence={{this.competence}} @selectTubeLevel={{true}} @tube={{this.skill.tube}} @level={{this.skill.level}} @selectEmptyLevels={{true}} />
