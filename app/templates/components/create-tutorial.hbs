<i class="close icon"></i>
<div class="header">
    Créer un tutoriel pour {{skillName}}
</div>
<form class="ui form">
    <div class="ui stacked segment">
        <div class="field">
            <label>Titre</label>
            {{input type="text" value=item.title placeholder="Titre"}}
        </div>
        <div class="three fields">
            <div class="field">
                <label>Lien</label>
                {{input type="text" value=item.link placeholder="Lien"}}
            </div>
            <div class="field">
                <label>Source</label>
                {{input type="text" value=item.source placeholder="Source"}}
            </div>
            <div class="field">
                <label>License</label>
                {{input type="text" value=item.license placeholder="License"}}
            </div>
        </div>
        <div class="three fields">
            {{form-select title="Format" value=item.format options=options.format edition=edition}}

            <div class="field">
                <label>Durée</label>
                {{input type="text" value=item.duration placeholder="Durée"}}
            </div>
            {{form-select title="Niveau" value=item.level options=options.level edition=edition}}

        </div>
        <div class="fields">
            <div class="field">
                <label>Rechercher tags</label>
                {{!form-select title="Tags" multiple=true value=item.tags options=options.tags edition=edition}}
            {{#ui-search showNoResults=true maxResults=4 apiSettings=searchAPISettings error=searchErrors onSelect=(action "selectTag")}}
                <div class="ui icon input">
                    <input class="prompt" placeholder="Nom" type="text">
                    <i class="search icon"></i>
                </div>
                <div class="results"></div>
            {{/ui-search}}
            </div>
            <div class="twelve wide field">
                <label>Tags</label>
                {{#each selectedTags as |tag|}}
                    <button {{action "unselectTag" tag.id}} class="ui mini labeled icon button">
                        <i class="close icon"></i>
                        {{tag.title}}
                    </button>
                {{/each}}
            </div>
        </div>
        <div class="fields">
            <div class="field">
                <label>Coup de coeur</label>
                <div onclick={{action "toCrush"}} class="ui circular icon button ">
                    <i class="icon heart {{if isCrush "" "outline" }}"></i>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="actions">
    <div onclick={{action "saveTutorial" item kindTuto skillName}} class="ui positive right labeled icon button">
        Enregistrer
        <i class="save icon"></i>
    </div>
</div>
