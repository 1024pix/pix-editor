<div class={{concat "field" (if @edition "" " disabled")}}>
    <label>{{@title}}</label>
    <div class="four fields">
        <div class="field">
          <FormItems::Select @title="Non voyant" @value={{@challenge.accessibility1}} @edition={{@edition}} @multiple={{false}} @options={{this.options.accessibility1}} />
        </div>
        <div class="field">
          <FormItems::Select @title="Daltonien" @value={{@challenge.accessibility2}} @edition={{@edition}} @multiple={{false}} @options={{this.options.accessibility2}} />
        </div>
        <div class="field">
          <FormItems::Select @title="Spoil" @value={{@challenge.spoil}} @edition={{@edition}} @multiple={{false}} @options={{this.options.spoil}} />
        </div>
        <div class="field">
          <FormItems::Select @title="Responsive" @value={{@challenge.responsive}} @edition={{@edition}} @multiple={{false}} @options={{this.options.responsive}} />
        </div>
    </div>
</div>