<div class="ui content">
  <form class="ui form">
    <div class="field">
      <FormSelect @title="Statut" @value={{this.entry.status}} @options={{this.options.status}} @edition={{this.edition}} />
    </div>
    <div class="field {{if this.edition "" "disabled"}}">
      <label>Texte</label>
      <div class="ui input">
        <Textarea @value={{this.entry.text}} @rows="4" @readonly={{not this.edition}} />      </div>
    </div>
  </form>
</div>
<div class="actions">
  <a class="ui right button" {{on "click" this.close}} href="#">
    Retour
  </a>
  {{#if this.edition}}
  <a class="ui green right button" {{on "click" this.save}} href="#">
    Enregistrer
  </a>
  {{else}}
    {{#if this.mayEdit}}
    <a class="ui green right button" {{on "click" this.edit}} href="#">
      Modifier
    </a>
    {{/if}}
  {{/if}}
</div>
