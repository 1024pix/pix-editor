{{#if display}}
  {{#modal-dialog
          targetAttachment="center"
          overlayClassNames="custom-overlay-modal"
  }}
    <div class="ui standard modal visible active">
      <div class="header">
        Message pour le changelog
      </div>
      <div class="content">
        <div class="description">
          <form class="ui form">
            <div class="field">
              <label>Texte</label>
              <div class="ui input">
                {{textarea value=value rows="4"}}
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="actions">
        <div class="ui deny button" {{action onApprove}}>
          Ignorer
        </div>
        <div class="ui positive right button" {{action onDeny value}}>
          Enregistrer
        </div>
      </div>
    </div>
  {{/modal-dialog}}
{{/if}}
