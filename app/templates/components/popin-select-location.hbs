<i class="close icon"></i>
<div class="header">
  Emplacement de {{name}}
</div>
<div class="content">
  <form action="" class="ui form">
    {{#if competencesNames.isFulfilled}}
      {{form-select title="Compétence" value=competenceName options=competencesNames edition=true}}
    {{/if}}
    {{#if selectTubeLevel}}
      {{#if (and tube.isFulfilled tubesNames.isFulfilled)}}
        {{form-select title="Tube" value=tubeName options=tubesNames edition=true}}
        {{#if levels.isFulfilled}}
          {{form-select title="Niveau" value=selectedLevel options=levels edition=true}}
        {{/if}}
      {{/if}}
    {{/if}}
  </form>
</div>
<div class="actions">
  <div class="ui deny button">
    Annuler
  </div>
  <div class="ui green button" {{action "set"}}>
    <i class="checkmark icon"></i>
    Déplacer
  </div>
</div>