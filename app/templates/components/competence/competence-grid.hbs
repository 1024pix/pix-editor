<table class="ui celled table definition tubes">
  <tbody>
  {{#each tubes as |tube|}}
    {{#if (or displayAllTubes tube.hasProductionChallenge) }}
      <tr>
        <td>
          {{#if (eq section "skills")}}
            {{#link-to "competence.tubes.single" competenceModel tube}}{{tube.name}}{{/link-to}}
          {{else}}
            {{tube.name}}
          {{/if}}
        </td>
        {{#each tube.filledSkills as |skill index|}}
         {{competence/grid/grid-cell section=section view=view skill=skill link=link tubeId=tube.id competenceModel=competenceModel index=index}}
        {{/each}}
      </tr>
    {{/if}}
  {{/each}}
  </tbody>
</table>
