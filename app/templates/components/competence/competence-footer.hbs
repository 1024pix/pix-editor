{{#if this.displayWorkbenchViews}}
  <button class={{concat "ui button item" (if (eq this.view "workbench") " active" "")}} {{on "click" (fn @selectView "workbench")}} type="button">
    <i class="grid layout icon"></i>
  </button>
  <button class={{concat "ui button item" (if (eq this.view "workbench-list") " active" "")}} {{on "click" (fn @selectView "workbench-list")}} type="button">
    <i class="align justify icon"></i>
  </button>
{{/if}}
{{#if this.displayProductionStats}}
  <div class="item competence-info"><div class="competence-info">Tubes : {{this.competence.productionTubeCount}}</div><div class="competence-info">Acquix : {{this.competence.productionSkillCount}}</div></div>
{{else}}
  <div class="item competence-info"><div class="competence-info">Tubes : {{this.competence.tubeCount}}</div><div class="competence-info">Acquix : {{this.competence.skillCount}}</div></div>
{{/if}}
{{#if this.mayCreateTube}}
  <button class="ui button left item" {{on "click" this.newTube}} type="button">
    <i class="plus square outline icon"></i> Nouveau tube
  </button>
{{/if}}
{{#if this.mayCreateTemplate}}
    <button class="ui button right item" {{on "click" this.newTemplate}} type="button">
        <i class="plus square outline icon"></i> Nouveau prototype
    </button>
{{/if}}
