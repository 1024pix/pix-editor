{{#unless this.config.lite}}
  {{#if (eq this.section "skills")}}
    <a class="left item" href="#" {{on "click" this.shareSkills}}>
      <i class="share square icon"></i> Exporter
    </a>
  {{else if (eq this.section "challenges")}}
    <div class="ui top attached tabular menu">
      <div class="item production {{if (eq this.view "production") "active" ""}}" {{on "click" (fn @selectView "production")}}>En production</div>
      <div class="item workbench {{if (eq this.view "production") "" "active"}}"  {{on "click" (fn @selectView "workbench")}}>Atelier</div>
    </div>
  {{/if}}
{{/unless}}
<a class="right item" {{on "click" (fn this.refresh true)}} href="#">
  <i class="sync alternate icon"></i> Actualiser
</a>