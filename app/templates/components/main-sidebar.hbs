{{#ui-sidebar class=class id="main-sidebar" dimPage=true closable=true context=".application" as |execute|}}
<div class="header">Pix Editor</div>
{{#ui-search showNoResults=true apiSettings=searchAPISettings error=searchErrors onSelect=(action hideSidebar)}}
  <div class="ui icon input">
    <input class="prompt" placeholder="Acquix ou recordId" type="text">
    <i class="search icon"></i>
  </div>
  <div class="results"></div>
{{/ui-search}}
{{#ui-accordion class="inverted"}}
  {{#each areas as |area|}}
  <div class="title">
    <i class="dropdown icon"></i>
    {{area.name}}
  </div>
  <div class="content">
    {{#each area.sortedCompetences as |competence|}}
      {{#link-to "competence" competence.id class="item" invokeAction=(action execute "hide")}}{{competence.name}}{{/link-to}}
    {{/each}}
  </div>
  {{/each}}
{{/ui-accordion}}
<div class="secondary-links">
  {{#link-to "target-profile"}}<i class="crosshairs icon"></i> Générateur de profil cible{{/link-to}}
</div>
<div class="secondary-links">
    <p {{action "shareAreas"}}><i class="share square icon"></i> Exporter les Sujets</p>
</div>
<div class="ui labelled icon menu">
<a class="item" onclick={{action openConfiguration}}><i class="wrench icon"></i>Configuration</a>
<div class="right item">
  {{#if author}}
    {{author}} -
  {{/if}}
   Version {{version}}</div>
</div>
{{/ui-sidebar}}