{{#if skillMode}}
  {{#link-to "competence.skill" competenceModel skill tagName="td" class="skill link"}}
    <div class="skill-name {{skill.descriptionCSS}}">
      {{skill.name}}
    </div>
    <div class="help {{skill.clueCSS}}">
      {{#if skill.clue}}
      <i class={{concat "idea icon " skill.clueCSS}}></i>
      {{else}}
      <i class="icon"></i>
      {{/if}}
      <span class="tuto-count">{{skill.tutoSolutionCount}} - <{{skill.tutoMoreCount}}</span>
    </div>
  {{/link-to}}
{{else}}
  {{#if (and production skill.template.content)}}
    {{#link-to link competenceModel skill.template.content tagName="td" class="skill link production"}}
      {{skill.name}}
      <div class="alternative">
        <span class="production">{{skill.alternativesCount.content}}</span>
        {{#if skill.template.content.notDeclinable}}
          <span class="not-declinable">NR</span>
        {{/if}}
      </div>
    {{/link-to}}
  {{else}}
    {{#link-to link competenceModel tagName="td" class=(concat "skill link " (if production "production" "workbench"))}}
      {{skill.name}}
      <div class="alternative">
        {{#if production}}
           <span class="production">{{skill.alternativesCount.content}}</span>
        {{else}}
          <span class="workbench">{{skill.workbenchAlternativesCount.content}}</span>
        {{/if}}
        {{#if skill.template.content.notDeclinable}}
          <span class="not-declinable">NR</span>
        {{/if}}
      </div>
   {{/link-to}}
  {{/if}}
{{/if}}