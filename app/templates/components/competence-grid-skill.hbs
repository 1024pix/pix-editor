{{#if skillMode}}
  {{#link-to skillLink competenceModel skillLinkElement tagName="td" class="skill link"}}
    <div class="skill-name {{skill.descriptionCSS}}">
      {{skill.name}}
    </div>
    <div class="help {{skill.clueCSS}}">
      {{#if skill.clue}}
      <i class={{concat "idea icon " skill.clueCSS}}></i>
      {{else}}
      <i class="icon"></i>
      {{/if}}
      <span class="tuto-count">{{skill.tutoSolutionCount}} - <{{skill.tutoMoreCount}}</span>
    </div>
  {{/link-to}}
{{else}}
  {{#link-to skillLink competenceModel skillLinkElement tagName="td" class=(concat "skill link " (if production "production" "draft"))}}
    {{skill.name}}
    <div class="alternative">
      {{#if production}}
        <span class="production">{{skill.productionTemplate.productionAlternativesCount.content}}</span>
        {{#if skill.productionTemplate.draftAlternativesCount.content}}
        <span class="draft">({{skill.productionTemplate.draftAlternativesCount.content}})</span>
        {{/if}}
      {{else}}
      {{/if}}
      {{#if skill.template.content.notDeclinable}}
        <span class="not-declinable">NR</span>
      {{/if}}
    </div>
  {{/link-to}}
{{/if}}