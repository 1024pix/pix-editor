<div class="field">
  {{#if (or this.value.length this.edition)}}
    <label>{{this.title}}</label>
  {{/if}}
  {{#if this.value.length}}
    {{#if this.value.0.url}}
      <img src={{this.value.0.url}} alt="" class="clickable" {{on "click" this.display}} role="presentation">
    {{else}}
      {{this.value.0.file.name}} ({{this.value.0.file.size}} octets)
    {{/if}}
    {{#if this.edition}}
      <button {{on "click" this.remove}} class="ui button file-remove" type="button"><i class="remove icon"></i></button>
    {{/if}}
  {{/if}}
  {{#if this.edition}}
    <FileUpload @name="illustration" @accept="image/*" @onfileadd={{this.add}}>
      <button class="ui button" type="button">
        Choisir une image...
      </button>
    </FileUpload>
  {{/if}}
</div>