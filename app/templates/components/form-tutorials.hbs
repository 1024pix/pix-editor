<div class="field {{if edition "" " disabled"}}">
    <label>
        {{title}}
    </label>
    {{#if edition}}
        {{#ui-search class="search-tutorial-input" showNoResults=true maxResults=5 apiSettings=searchAPISettings
                     error=searchErrors onSelect=(action "selectTutorial" tutorials)}}
            <div class="ui icon input">
                <input class="prompt" placeholder="Ajouter/créer tutoriel" type="text">
                <i class="search icon"></i>
            </div>
            <div class="results"></div>
        {{/ui-search}}
<!--        <div onclick={{action "openCreateTutoModal"}} class="ui circular icon button floated"-->
<!--             title="Créer un tutoriel">-->
<!--            <i class="icon add"></i>-->
<!--        </div>-->
        {{create-tutorial tutorials=tutorials application=application class=popinCreateTutoClass}}
    {{/if}}
</div>
<div >
    {{#if loading}}
        <div class="ui active centered inline loader"></div>
    {{else}}
        <div class="ui cards">
            {{#each tutorials as |tutorial|}}
                <div class="card">
                    <div class="content">
                        <div class="header">
                            <a class="ui right floated button basic" href={{tutorial.link}} target="_blank"
                               rel="noopener">
                                <i class="external icon"></i>
                            </a>
                            {{tutorial.title}}
                        </div>
                        <div class="description">
                            <div>Format : {{tutorial.format}}</div>
                            <div>Durée : {{tutorial.duration}}</div>
                            <div>Source : {{tutorial.source}}</div>
                        </div>
                    </div>
                </div>
            {{/each}}
            {{#if empty}}
                <div class="card">
                    <div class="content">
                        aucun élément
                    </div>
                </div>
            {{/if}}

        </div>
    {{/if}}
</div>
