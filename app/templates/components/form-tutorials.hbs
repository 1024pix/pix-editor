<div class="field {{if edition "" " disabled"}}">
    <label>
        {{title}}
    </label>
    {{#if edition}}
        <label>Ajouter/créer tutoriel</label>
        {{#ui-search class=(concat "search-tuto-" searchClass) maxResults=101 apiSettings=searchAPISettings
                      onSelect=(action "selectTutorial" tutorials)}}
            <div class="ui icon input">
                <input class="prompt" placeholder="commencer la recherche par > pour rechercher par Tag" type="text">
                <i class="search icon"></i>
            </div>
            <div class="results"></div>
        {{/ui-search}}
    {{/if}}

</div>
<div >
    {{#if loading}}
        <div class="ui active centered inline loader"></div>
    {{else}}
        <div class="ui cards">
            {{#each tutorials as |tutorial|}}
                <div class="card">
                    <div class="content">
                        <div class="header">
                            {{#if edition}}
                                <div {{action "unselectTutorial" tutorials tutorial}} class="ui right floated icon button">
                                    <i class="close icon"></i>
                                </div>
                            {{/if}}
                            <a class="ui right floated button basic" href={{tutorial.link}} target="_blank"
                               rel="noopener">
                                <i class="external icon"></i>
                            </a>
                            {{tutorial.title}}
                        </div>
                        <div class="description">
                            <div>Format : {{tutorial.format}}</div>
                            <div>Durée : {{tutorial.duration}}</div>
                            <div>Source : {{tutorial.source}}
                                {{#if tutorial.isCrush}}
                                    <div class="ui right floated">
                                        <i class="red heart icon"></i>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
            {{#if empty}}
                <div class="card">
                    <div class="content">
                        aucun élément
                    </div>
                </div>
            {{/if}}

        </div>
    {{/if}}
</div>
