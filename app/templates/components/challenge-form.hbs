<form action="" class="ui form">
  <Fields::Mde @title="Consigne" @value={{@challenge.instructions}} @edition={{@edition}} @helpContent={{this.helpInstructions}} />
  {{#if (not this.alternative)}}
    <Fields::Select @title="Type" @value={{@challenge.type}} @options={{this.options.types}} @edition={{@edition}} />
  {{/if}}
  {{#if this.typeIsQROC}}
    <Fields::Select @title="Format QROC" @value={{@challenge.format}} @defaultText="Mots" @options={{this.options.format}} @edition={{@edition}} />
  {{/if}}
  <Fields::Textarea @title="Propositions" @value={{@challenge.suggestion}} @edition={{@edition}} @helpContent={{this.helpSuggestions}} />
  <Fields::Textarea @title="Réponses" @value={{@challenge.answers}} @edition={{@edition}} @helpContent={{this.helpAnswers}} />
  {{#if @challenge.isTextBased}}
      <div class={{concat "field" (if @edition "" " disabled")}}>
          <label>Tolérance</label>
          <div class="three fields">
              <div class="field">
                <CustomCheckbox @label="T1 (espaces/casse/accents)" @checked={{@challenge.t1}} @disabled={{not @edition}} />
              </div>
              <div class="field">
                <CustomCheckbox @label="T2 (ponctuation)" @checked={{@challenge.t2}} @disabled={{not @edition}} />
              </div>
              <div class="field">
                <CustomCheckbox @label="T3 (distance d'édition)" @checked={{@challenge.t3}} @disabled={{not @edition}} />
              </div>
          </div>
      </div>
  {{/if}}
  {{#if @challenge.supportsScoring}}
    <Fields::Textarea @value={{@challenge.scoring}} @title="Scoring" @edition={{@edition}} @helpContent={{this.helpScoring}} />
  {{/if}}
  <Fields::Illustration @title="Illustration" @value={{@challenge.illustration}} @edition={{@edition}} @display={{this.showIllustration}} />
  {{#if @challenge.illustration}}
    <Fields::Textarea @value={{@challenge.alternativeText}} @title="Texte alternatif" @edition={{@edition}} />
  {{/if}}
  <Fields::Files @title="Pièces jointes" @value={{@challenge.attachments}} @baseName={{@challenge.attachmentBaseName}} @edition={{@edition}} />
  <Fields::Input @title="Embed" @value={{@challenge.embedURL}} @edition={{@edition}} @label="URL" />
  <Fields::Input @value={{@challenge.embedHeight}} @edition={{@edition}} @label="Hauteur" />
  <Fields::Input @value={{@challenge.embedTitle}} @edition={{@edition}} @label="Titre" />
  {{#if (not this.alternative)}}
    <Fields::Select @title="Type pédagogie" @value={{@challenge.pedagogy}} @options={{this.options.pedagogy}} @edition={{@edition}} />
  {{/if}}
  {{#if this.authors.isFulfilled}}
    <Fields::Select @title="Auteur" @value={{@challenge.author}} @options={{this.authors}} @edition={{@edition}} @multiple={{true}} />
  {{/if}}
  {{#if (not this.alternative)}}
    <Fields::Select @title="Déclinable" @value={{@challenge.declinable}} @options={{this.options.declinable}} @edition={{@edition}} />
  {{/if}}
    <div class={{concat "field" (if @edition "" " disabled")}}>
        <CustomCheckbox @label="Timer" @checked={{@challenge.timerOn}} @disabled={{not @edition}} />
      {{#if @challenge.timer}}
        <Fields::Input @value={{@challenge.timer}} @edition={{@edition}} />
      {{/if}}
    </div>
  {{#if @challenge.isSuggested}}
      <div class={{concat "field" (if @edition "" " disabled")}}>
          <label>Qualité</label>
          <div class="four fields">
              <div class="field">
                <Fields::Select @title="Non voyant" @value={{@challenge.accessibility1}} @edition={{@edition}} @multiple={{false}} @options={{this.options.accessibility1}} />
              </div>
              <div class="field">
                <Fields::Select @title="Daltonien" @value={{@challenge.accessibility2}} @edition={{@edition}} @multiple={{false}} @options={{this.options.accessibility2}} />
              </div>
              <div class="field">
                <Fields::Select @title="Spoil" @value={{@challenge.spoil}} @edition={{@edition}} @multiple={{false}} @options={{this.options.spoil}} />
              </div>
              <div class="field">
                <Fields::Select @title="Responsive" @value={{@challenge.responsive}} @edition={{@edition}} @multiple={{false}} @options={{this.options.responsive}} />
              </div>
          </div>
      </div>
  {{/if}}
  <div class={{concat "field" (if @edition "" " disabled")}}>
      <label>Internationalisation</label>
      <div class="two fields">
          <div class="field">
            <Fields::Select @title="Langue" @value={{@challenge.language}} @edition={{@edition}} @multiple={{false}} @options={{this.options.language}} />
          </div>
          <div class="field">
            <Fields::Select @title="Géographie" @value={{@challenge.area}} @edition={{@edition}} @multiple={{false}} @options={{this.options.area}} />
          </div>
      </div>
  </div>
  {{#if (not @edition)}}
    <Fields::Input @value={{@challenge.pixId}} @title="Id" @edition={{false}} />
  {{/if}}
</form>