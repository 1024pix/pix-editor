<div class="ui grid">
  <h2 class="row competence-profile {{concat "area-profile-" area}}">
    <div class="column center competence-code">
      <p>{{competence.code}}</p>

    </div>
    <div class="fourteen wide column">
      <div>{{competence.title}}</div>
      <div class="competence-description">{{competence.description}}</div>
    </div>
  </h2>
  <div class="row tubes-profile">
    <div class="five wide column tube-description"><p>salut</p></div>
    <div class="eleven wide column">
      {{#each competence.productionTubes as |tube|}}
        <div class="tube-profile">
          <div>
            <i class="square outline icon {{concat (if tube.selectedLevel "active" "")}}" {{action 'showTube' tube}}>
              {{#if tube.selectedLevel}}
                <span class="max-skill-level">{{tube.selectedLevel}}</span>
              {{/if}}
            </i>
            <p>{{tube.name}}{{tube.practicalTitle}}</p>
          </div>
          {{!ui-checkbox label=tube.practicalTitle onChange=(action "showTube" tube)}}
          <p>{{tube.practicalDescription}}</p>
        </div>
      {{/each}}
    </div>
  </div>
</div>