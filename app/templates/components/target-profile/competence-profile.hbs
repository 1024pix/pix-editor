<div class="ui grid">
  <h2 class="row competence-profile {{concat "area-profile-" area}}">
    <div class="column center competence-code">
      <p>{{competence.code}}</p>
    </div>
    <div class="fourteen wide column">
      <div>{{competence.title}}</div>
      <div class="competence-description">{{competence.description}}</div>
    </div>
  </h2>
  <div class="row tubes-profile">
    <div class="five wide column tube-description"><p></p></div>
    <div class="eleven wide column">
      {{#each competence.productionTubes as |tube|}}
        <div class="tube-profile">
          <div>
            <i class="square icon {{concat (if tube.selectedLevel "active" "outline")}}" {{action "showTube" tube}}>
              {{#if tube.selectedLevel}}
                <span class="max-skill-level">{{tube.selectedLevel}}</span>
              {{/if}}
            </i>
            <p class="{{concat (if tube.selectedLevel "active" "")}}">{{tube.name}} : {{tube.practicalTitle}}</p>
          </div>
          <p class="{{concat (if tube.selectedLevel "active" "")}}">{{tube.practicalDescription}}</p>
        </div>
      {{/each}}
    </div>
  </div>
  <p class="selected-tube-count">{{competence.selectedProductionTubeCount}}/{{competence.productionTubeCount}}</p>
</div>