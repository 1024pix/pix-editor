<div class={{concat "field" (if this.edition "" " disabled")}}>
    <label>
        {{#if this.edition}}
            <a {{on "click" this.toggleMaximized}} class={{concat "ui compact icon right floated button" (if this.maximized " primary" " basic")}} href="#"><i class={{concat (if this.maximized "compress " "expand ")  "icon"}}></i></a>
            {{#if this.helpContent}}
            <div class="ui compact icon right floated button basic">
              <i class="help icon">
                <EmberTooltip @side="left-start" @tooltipClass="custom-tooltip">
                  {{this.safeHelpContent}}
                </EmberTooltip>
              </i>
            </div>
            {{/if}}
        {{/if}}
        {{this.title}}
    </label>
    <Textarea @value={{this.value}} @rows="4" @readonly={{not this.edition}} class="attached" /></div>