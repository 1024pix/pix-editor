<div class="field">
{{#if (or value.length edition)}}
  <label>{{title}}</label>
{{/if}}
{{#if value.length}}
  {{#each value as |file key|}}
    <a href="{{file.url}}" download="{{file.filename}}" target="_blank"><i class="file icon"></i> {{file.filename}}</a>
    {{#if edition}}
      <a onclick={{action "remove" key}} class="file-remove"><i class="remove icon"></i></a>
    {{/if}}
  {{/each}}
{{/if}}
{{#if edition}}
  {{#file-upload name="files" onfileadd=(action "add")}}
    <a class="ui button">
      Ajouter un fichier...
    </a>
  {{/file-upload}}
{{/if}}
</div>
