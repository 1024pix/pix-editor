<div class="competence-grid">
  <table class="ui celled table definition tubes">
    <tbody>
    {{#each @tubes as |tube|}}
      {{#if (or this.displayAllTubes tube.hasProductionChallenge) }}
        <tr>
          <td>
            {{#if (and (eq @view "production") (eq @section "skills"))}}
              <LinkTo @route="competence.tubes.single" @model={{tube}}>{{tube.name}}</LinkTo>
            {{else}}
              {{tube.name}}
            {{/if}}
          </td>
          {{#if (and (eq @view "skill-workbench") (eq @section "skills"))}}
            {{#each tube.filledSkills as |skills index|}}
              <Competence::Grid::GridCell @section={{@section}}
                                          @view={{@view}}
                                          @skill={{get skills 0}}
                                          @link={{@link}}
                                          @tube={{tube}}
                                          @index={{index}} />
            {{/each}}
          {{else}}
            {{#each tube.filledProductionOrDraftSkills as |skill index|}}
              <Competence::Grid::GridCell @section={{@section}}
                                          @view={{@view}}
                                          @skill={{skill}}
                                          @link={{@link}}
                                          @tube={{tube}}
                                          @index={{index}} />
            {{/each}}
          {{/if}}

        </tr>
      {{/if}}
    {{/each}}
    </tbody>
  </table>
</div>
