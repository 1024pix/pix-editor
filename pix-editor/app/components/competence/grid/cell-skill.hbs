<LinkTo @route="competence.skills.single" @model={{@skill}} @tagName="td" class={{concat "skill skill-cell link skill-mode" (unless @skill.productionPrototype " draft-skill")}}>
  <div class="skill-name {{@skill.descriptionCSS}}">
    {{@skill.name}}
  </div>
  <div class="help">
    {{#if (or @skill.clue @skill.clueNA)}}
    <i class={{concat "idea icon " @skill.clueCSS}}></i>
    {{else}}
    <i class="icon"></i>
    {{/if}}
    <span class="tuto-count">{{@skill.tutoSolution.length}} - {{@skill.tutoMore.length}}</span>
  </div>
</LinkTo>
