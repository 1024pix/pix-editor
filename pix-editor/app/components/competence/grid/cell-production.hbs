<LinkTo data-test-skill-cell @route={{@link}} @model={{@skill.productionPrototype}} @tagName="td" class="skill skill-cell link production">
  {{@skill.name}}
  <div class="alternative">
    <span class="production">{{@skill.productionPrototype.productionAlternatives.length}}</span>
    {{#if @skill.productionPrototype.draftAlternatives.length}}
      <span class="draft">({{@skill.productionPrototype.draftAlternatives.length}})</span>
    {{/if}}
    {{#if @skill.productionPrototype.notDeclinable}}
      <span class="not-declinable">NR</span>
    {{/if}}
  </div>
</LinkTo>
