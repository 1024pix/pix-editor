<PixModal
  @title={{this.title}}
  @onCloseButtonClick={{@onDeny}}
  @showModal={{@showModal}}
  ...attributes
>
  <:content>
    {{@content}}
  </:content>
  <:footer>
    <PixButton
      @backgroundColor="transparent-light"
      @isBorderVisible={{true}}
      @triggerAction={{@onDeny}}
    >
      Annuler
    </PixButton>
    <PixButton
      @triggerAction={{@onApprove}}
      data-testid='popin-confirm-button'
    >
      Oui
    </PixButton>
  </:footer>
</PixModal>