<PixModal
  @title={{@title}}
  @onCloseButtonClick={{@onDeny}}
  @showModal={{true}}
>
  <:content>
    {{@content}}
  </:content>
  <:footer>
    <PixButton
      @backgroundColor="transparent-light"
      @isBorderVisible={{true}}
      @triggerAction={{@onDeny}}
    >
      Annuler
    </PixButton>
    <PixButton @triggerAction={{@onApprove}}>Oui</PixButton>
  </:footer>
</PixModal>
