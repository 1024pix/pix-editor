<AccordionList as |accordion|>
  <div class="ui accordion inverted">
    {{#each @areas as |area|}}
      <accordion.item as |accordionItem|>
        <accordionItem.toggle @class="title">
          <i class="dropdown icon"></i>
          {{area.name}}
        </accordionItem.toggle>
        <accordionItem.panel>
          <div class="content">
            {{#each area.sortedCompetences as |competence|}}
              <LinkTo @route="competence" @model={{competence.id}} class="item" @invokeAction={{@close}}> {{competence.name}}</LinkTo>
            {{/each}}
          </div>
        </accordionItem.panel>
      </accordion.item>
    {{/each}}
  </div>
</AccordionList>
