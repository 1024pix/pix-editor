<div class="field">
  <label>
    {{#if @edition}}
      {{#if @helpContent}}
        <div class="ui compact icon right floated button basic">
          <i class="help icon">
            <EmberTooltip @side="left-start" @tooltipClass="custom-tooltip">
              {{this.safeHelpContent}}
            </EmberTooltip>
          </i>
        </div>
      {{/if}}
    {{/if}}
    {{@title}}
  </label>
  {{#if @edition}}
    <SimpleMde @value={{@value}} @change={{@setValue}} @options={{this.simpleMDEOptions}} />
  {{else}}
    <div class="mde-preview">
      {{simple-mde-preview @value}}
    </div>
  {{/if}}
</div>
