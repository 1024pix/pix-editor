<div class={{concat "field" (if @edition "" " disabled")}} ...attributes>
  <p>{{@title}}</p>
  {{#if @helpContent}}
    <div class="ui compact icon right floated button">
      <i class="help icon">
        <EmberTooltip @side="left-start" @tooltipClass="custom-tooltip">
          {{this.safeHelpContent}}
        </EmberTooltip>
      </i>
    </div>
  {{/if}}
  <div class="ui input">
    {{#if @label}}
      <label class="label-input" for={{@id}} >{{@label}} : </label>
    {{/if}}
    <Input id={{@id}} @value={{@value}} placeholder={{@placeholder}} readonly={{not @edition}} {{on "change" this.change}} />
  </div>
</div>
