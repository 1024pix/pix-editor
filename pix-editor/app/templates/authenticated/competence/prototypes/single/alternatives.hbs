{{#if this.competenceController.mainRightSlot}}
  {{#in-element this.competenceController.mainRightSlot}}
    <Alternatives
      @challenge={{this.model}}
      @maximizeRight={{this.maximizeRight}}
      @mayCreateAlternative={{this.mayCreateAlternative}}
      @newAlternative={{this.newAlternative}}
      @rightMaximized={{this.rightMaximized}}
      @size={{this.size}}
    />
    {{outlet}}
  {{/in-element}}
{{/if}}