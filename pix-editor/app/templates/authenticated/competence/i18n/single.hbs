<div class="i18n-header">
  <div class="ui menu">
    <div class="item header">{{this.skill.name}}</div>
    <div class="ui right menu">
      {{#if this.isMaximized}}
        <PixIconButton
          @triggerAction={{this.minimize}}
          @icon="window-minimize"
          @iconPrefix="fas"
          @ariaLabel="Minimiser la fenêtre de détail des traductions de l'épreuve"
          class="button-with-white-icon"/>
      {{else}}
        <PixIconButton
          @triggerAction={{this.maximize}}
          @icon="window-maximize"
          @iconPrefix="fas"
          @ariaLabel="Maximiser la fenêtre de détail des traductions de l'épreuve"
          class="button-with-white-icon"/>
      {{/if}}
      <PixIconButton
        @triggerAction={{this.close}}
        @icon="rectangle-xmark"
        @iconPrefix="fas"
        @ariaLabel="Fermer le détail des traductions de l'épreuve"
        class="button-with-white-icon"/>
    </div>
  </div>
</div>
<div class="single i18n">
 <List::I18n @list={{this.challengesByLanguagesAndAlternativesCount}} @skill={{this.skill}}/>
</div>
