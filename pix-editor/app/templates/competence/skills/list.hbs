<div class="skill-header validated">
  <div class="ui menu">
    <div class="item header">{{this.firstSkill.name}}</div>
    <div class="ui right menu">
      {{#if this.isMaximized}}
        <button class="ui icon button" {{on "click" this.minimize}} type="button"><i class="window minimize icon"></i>
        </button>
      {{else}}
        <button class="ui icon button" {{on "click" this.maximize}} type="button"><i
                class="window maximize outline icon"></i></button>
      {{/if}}
      <button class="ui icon button" {{on "click" this.close}} type="button"><i class="icon window close"></i></button>
    </div>
  </div>
</div>
<div class="single i18n">
  <List::LiveSkill @list={{this.model.sortedSkills}}/>
</div>
<div class="ui borderless bottom attached labelled icon menu">
  {{#if this.mayCreateSkill}}
    <button class="ui button right item" {{on "click" this.addSkill}} type="button">
      <i class="plus square outline icon"></i> Nouvel acquis
    </button>
  {{/if}}
</div>