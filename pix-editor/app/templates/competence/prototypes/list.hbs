<div class="main-title  {{if this.config.lite "lite" ""}}">
  <h1 class="ui header">
    <div class="ui right floated menu">
      <button class="ui button icon item" {{on "click" this.close}} type="button"><i class="icon window close"></i>
      </button>
    </div>
    Prototypes de {{this.firstSkill.name}} ({{this.selectedSkillOrFirstSkill.date}})
  </h1>
</div>
<div class="ui top attached borderless labelled icon menu">
  <div class="ui top attached tabular menu">
    {{#if this.model.activeSkill}}
      <div class="item {{if (eq selectedSkillIndex -1) "active" ""}}" {{on "click" (fn this.setSelectedSkill -1)}}>En production</div>
    {{/if}}
    {{#each this.model.draftSkills as |skill index|}}
      <div class="item {{if (eq selectedSkillIndex index) "active" ""}}" {{on "click" (fn this.setSelectedSkill index)}}>En construction</div>
    {{/each}}
  </div>
</div>
<div class="ui attached segment competence {{this.size}}">
  <List::Prototypes @list={{this.selectedSkillOrFirstSkill.sortedPrototypes}} />
</div>
<div class="ui borderless bottom attached labelled icon menu">
  {{#if this.mayCreatePrototype}}
    <button class="ui button right item" {{on "click" this.newVersion}} type="button">
      <i class="plus square outline icon"></i> Nouvelle version
    </button>
  {{/if}}
</div>
{{outlet}}
